<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:fitsSystemWindows="true"
    tools:context=".ProfileActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bar_color"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "vertical"
            android:layout_gravity="center"
            android:paddingTop ="15dp">



            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="375dp"
                android:layout_height="175dp"
                android:src="@drawable/_1"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_marginTop="525dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="240dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_account_box" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src = "@drawable/ic_bio"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src = "@drawable/ic_date"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src = "@drawable/ic_pc"
                android:layout_marginTop="390dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src = "@drawable/ic_content"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text = "Username :"
                android:layout_marginTop="245dp"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text = "Bio :"
                android:layout_marginTop="295dp"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text = "Account Created :"
                android:layout_marginTop="345dp"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text = "Ip / Port :"
                android:layout_marginTop="395dp"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text = "Shared Content :"
                android:layout_marginTop="555dp"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/getUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="245dp"
                android:layout_marginLeft="135dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/getBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="295dp"
                android:layout_marginLeft="85dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/getIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="395dp"
                android:layout_marginLeft="120dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/getDateAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editUsernameText"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_marginLeft="190dp"
                android:hint="Insert username"
                android:layout_marginTop="442dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editBioText"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_marginLeft="190dp"
                android:hint="Insert bio"
                android:layout_marginTop="485dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="left"
                android:orientation="vertical">

                <Button
                    android:id="@+id/edit_username_button"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="400dp"
                    android:background="@drawable/button_color"
                    android:drawableLeft="@drawable/ic_edit"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Edit Username"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/edit_bio_button"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_color"
                    android:drawableLeft="@drawable/ic_edit"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Edit Bio"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>